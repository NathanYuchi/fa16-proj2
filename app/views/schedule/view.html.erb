
<div style="margin: 150px">
    <table id="users" class="table table-bordered table-condensed">
        <tr><th>Title</th>
            <th>Units</th>
            <th>Division</th>
        </tr>

        <tr>
        <% @course.each do |t| %>
            <td><%= t.title %></td>
            <td><%= t.units %></td>
            <td><%= t.div %></td>
            <td><%= button_to "Delete Class", delete_path(id: t), :class => "button medium", :method =>:patch %></td>
        </tr>
        <% end %>

    </table>
    <%= button_to "Edit Schedule", schedule_index_path, :method => "get" , :class=>"button"%>


</div>
