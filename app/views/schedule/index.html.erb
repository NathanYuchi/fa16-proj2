<h1>List of Classes</h1>
<table>
	<tr>
		<th>Name</th>
		<th>Unit</th>
		<th>Lower/Upper Div</th>
	</tr>
	<tr>
	<% @courses.each do |t| %>
       	<td><%= t.title%></td>
       	<td><%= t.units%></td>
       	<td><%= t.div%></td>
       	<td><%= button_to "Add to schedule", add_path(id: t), :class => "button medium", :method =>:patch %></td>
    </tr>
   <% end %>
</table> 


 